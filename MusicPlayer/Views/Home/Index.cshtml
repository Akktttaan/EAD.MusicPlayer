@{
    ViewData["Title"] = "Home Page";
}
@model Track[]

<div class="text-center">
    <h1 class="display-4">Мои треки</h1>
</div>

<h2>Загрузить новый трек</h2>
<form asp-controller="Home" method="post" asp-action="AddTrack" enctype="multipart/form-data">
    <input class="btn btn-dark" type="file" name="file" id="file">
    <input class="btn btn-primary" type="submit" value="Загрузить">
</form>
<br>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Название</th>
        <th scope="col">Трек</th>
        <th scope="col">Исполнитель</th>
        <th scope="col">Альбом</th>
        <th scope="col">Плейлист</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var track in Model)
    {
        <tr>
            <td>@track.Name</td>
            <td><audio controls><source src="@Url.Content("~/Tracks/" + track.FileName)" type="audio/mpeg"></audio></td>
            <td>@track.Artist?.Name</td>
            <td>@track.Album?.Name</td>
            <td>@track.Playlist?.Name</td>
            <td>
                <form asp-controller="Home" asp-action="DeleteTrack" method="post">
                    <input type="hidden" name="trackId" value="@track.Id" />
                    <button type="submit">Удалить</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>